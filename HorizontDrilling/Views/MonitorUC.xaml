<UserControl x:Class="HorizontDrilling.Views.MonitorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HorizontDrilling"
             xmlns:log="clr-namespace:Loggin;assembly=Loggin"
             xmlns:v="clr-namespace:HorizontDrilling.Views"
             xmlns:c="clr-namespace:Core;assembly=Core"
             xmlns:res="clr-namespace:HorizontDrilling.Properties"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <c:MenuTemplateSelector x:Key="MenuTemplateSelectorVMKey" />
    </UserControl.Resources>

    <UserControl.ContextMenu>
        <ContextMenu ItemsSource="{Binding CItems}"
                     UsesItemContainerTemplate="True"
                     ItemContainerTemplateSelector="{StaticResource MenuTemplateSelectorVMKey}" />
    </UserControl.ContextMenu>

    <RichTextBox  x:Name="Box"
                  IsUndoEnabled="False"
                  UndoLimit="0"
                  IsReadOnly="True"
                  FontFamily="Consolas"
                  VerticalScrollBarVisibility="Auto"
                  Loaded="Box_Loaded"
                  Unloaded="Box_Unloaded"
                  TextChanged="Box_TextChanged">
        <FlowDocument>
            <Paragraph />
        </FlowDocument>
    </RichTextBox>


</UserControl>
