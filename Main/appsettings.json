{
  "GlobalSettings": {
    "Logging": {
      "Box": {
        "Error": true,
        "Info": true,
        "Trace": true,
        "Monitor": true
      },
      "File": {
        "Error": true,
        "Info": false,
        "Trace": false
      }
    },
    "Culture": "ru-RU",
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "TraceTextBlock": {
      "ConsoleCategoty": "TraceLogVM",
      "MaxTextBlockLength": 152,
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "ss.ffff ",
        "UseUtcTimestamp": true
      }
    },
    "ExceptionTextBlock": {
      "ConsoleCategoty": "ExceptLogVM",
      "MaxTextBlockLength": 351,
      "LogLevel": {
        "Default": "Warning",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterOptions": {
        "SingleLine": false,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy.MM.dd HH:mm:ss.ffff ",
        "UseUtcTimestamp": true
      }
    },
    "InfoTextBlock": {
      "ConsoleCategoty": "InfoLogVM",
      "MaxTextBlockLength": 353,
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "HH:mm:ss.ffff ",
        "UseUtcTimestamp": true
      }
    },
    "File": {
      "IncludeScopes": true,
      "BasePath": "Logs/Err",
      "LogLevel": {
        "Default": "Warning"
      },
      "Files": [
        {
          "Path": "err-<counter:000>.log",
          "MaxFileSize": 10000
        }
      ]
    },
    "InfoFile": {
      "IncludeScopes": true,
      "BasePath": "Logs/Info",
      "LogLevel": {
        "Default": "Information"
      },
      "Files": [
        {
          "Path": "info-<counter:000>.log",
          "MaxFileSize": 10000
        }
      ]
    },
    "TraceFile": {
      "IncludeScopes": true,
      "BasePath": "Logs/Trace",
      "LogLevel": {
        "Default": "Trace"
      },
      "Files": [
        {
          "Path": "trace-<counter:000>.log",
          "MaxFileSize": 10000
        }
      ]
    }
  }
}